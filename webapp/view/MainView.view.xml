<mvc:View 
    controllerName="dbtrust.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Panel headerText="{i18n>selectionScreen}" id="panel">
                            <Label id="labelShipName" labelFor="shipName" text="{i18n>shipName}" class="sapUiSmallMargin" />
                            <Input id="shipName" width="200px" class="sapUiTinyMargin"></Input>
                            <Label id="labelCountry" labelFor="country" text="{i18n>country}" class="sapUiSmallMargin" />
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
